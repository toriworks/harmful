<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/default_white">

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_harmful_info"
            android:id="@+id/button_harmful_info"
            android:layout_above="@+id/button_harmful_component"
            android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_harmful_component"
            android:id="@+id/button_harmful_component"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_harmful_effect"
            android:id="@+id/button_harmful_effect"
            android:layout_below="@+id/button_harmful_component"
            android:layout_alignParentLeft="true"/>
</RelativeLayout>